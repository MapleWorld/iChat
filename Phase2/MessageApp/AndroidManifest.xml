<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.messageapp"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="10"
        android:targetSdkVersion="18" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.messageapp.LoginActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.messageapp.RegisterActivity"
            android:label="@string/title_activity_register" >
        </activity>
        <activity
            android:name="com.example.messageapp.MainActivity"
            android:label="@string/title_activity_main" >
        </activity>
        <activity
            android:name="com.example.messageapp.ViewThreadActivity"
            android:label="@string/title_activity_view_thread" >
        </activity>
        <activity
            android:name="com.example.messageapp.CreateThreadActivity"
            android:label="@string/title_activity_create_thread" >
        </activity>
        <activity
            android:name="com.example.messageapp.CreateTopicActivity"
            android:label="@string/title_activity_create_topic" >
        </activity>
        <activity
            android:name="com.example.messageapp.ViewCategoriesActivity"
            android:label="@string/title_activity_view_categories" >
        </activity>
        <activity
            android:name="com.example.messageapp.SettingsActivity"
            android:label="@string/title_activity_settings" >
        </activity>
        <activity
            android:name="com.example.messageapp.FindThreadActivity"
            android:label="@string/title_activity_find_thread" >
        </activity>
        <activity
            android:name="com.example.messageapp.ViewListThreadActivity"
            android:label="@string/title_activity_view_list_thread" >
        </activity>
        <activity
            android:name="com.example.messageapp.ViewToicListActivity"
            android:label="@string/title_activity_view_toic_list" >
        </activity>
        <activity
            android:name="com.example.messageapp.ViewTopicListActivity"
            android:label="@string/title_activity_view_topic_list" >
        </activity>
        <activity
            android:name="com.example.messageapp.ViewTopicListByCategoryActivity"
            android:label="@string/title_activity_view_topic_list_by_category" >
        </activity>
    </application>

</manifest>
